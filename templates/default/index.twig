{% set bodyClass = 'home' %}

{% extends "default/_layouts/site" %}

{% block navigation %}
{% include "_includes/global/navigation" %}
{% endblock %}

{% block main %}
<!-- Layout -->
<div class="grid-x small-up-1 medium-up-3 align-bottom">
  
  {% set projectsQuery = entry.projects.all() %}

  {% for project in projectsQuery %}
    <div class="cell">


      <div class="grid-x grid-padding-x grid-padding-y align-{{project.alignHorizontal.value}} medium-padding-collapse">
        <div class="cell small-12 {% if project.size.value == 'small' %}medium-6{% elseif project.size.value == 'medium' %}medium-8{% elseif project.size.value == 'large' %}medium-10{% elseif project.size.value == 'full' %}medium-12{% endif %}">


        {% set item = project.project.one() %}
        <a href="{{ item.url }}">
          {% set image = item.image.one() %}
          <div class="margin-bottom-1 image--3-4" {% if image %}data-interchange="{% include "_includes/images/contained/5-7/interchange-img-small-12-medium-12" %}"{% endif %}></div>
          <h2 class="h5 margin-left-1 margin-right-1">{{item.title}} {% if item.project %}â€” <span class="serif-italic">{{item.project}}</span>{% endif %}</h2>
        </a>

        </div>
      </div>

    </div>
  {% endfor %}

</div>
<!-- End Layout -->
{% endblock %}

{% block footer %}
{% include "_includes/global/footer" %}
{% endblock %}

